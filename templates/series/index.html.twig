{% extends 'base.html.twig' %}

{% block title %}
    Series
{% endblock %}

{% block stylesheets %}
    <style>
        .list-group {
            border-radius: 3px;
            border: 1px solid var(--secondary-light);
        }

        .list-group li {
            width: 100%;
            padding: 10px;
            align-items: center;
            display: inline-flex;
            justify-content: space-between;
        }

        .list-group li:not(:last-child) {
            border-bottom: 1px solid var(--secondary-light);
        }

        .btn-group {
            display: flex;
        }

        .btn-group a {
            margin: 0 5px;
        }
    </style>
{% endblock %}

{% block body %}
    <h1 class="title">Series</h1>

    <a href="{{ path('app_series_create') }}" class="btn btn-link mb">
        new <i class="fa-solid fa-plus"></i>
    </a>

    <ul class="list-group">
        {% for series in seriesList %}
            <li>
                {{ series.name }}
                <div class="btn-group">
                    <form action="{{ path('app_series_destroy', {id: series.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">

                        <button class="btn btn-input">
                            <i class="fa-regular fa-trash-can"></i>
                        </button>
                    </form>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
